<div class="sign-in__box box">
  <h1>Instate</h1>
  <div class="content">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'sign-in__form'}) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: '이메일', class: 'input' %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", placeholder: '비밀번호', class: 'input' %>
          <div class="right">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "비밀번호를 잊으셨나요?", new_password_path(resource_name) %>
            <% end -%>
          </div>
        </div>

        <div class="field">
          <%= f.submit "로그인", class: 'button-blue' %>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, '로그인 상태 유지', class: 'label' %>
            </div>
        <% end -%>
    <% end %>
  </div>
</div>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="sign-in__box box">
      <p class="register__message">
        계정이 없으신가요? <%= link_to "가입하기", new_registration_path(resource_name) %>
      </p>
    </div>
<% end -%>
